#!/usr/bin/env bash
#
# rs-sdk type checker
# Runs TypeScript type-checking across the project
#
# Usage:
#   ./check           # Check SDK, gateway, scripts, behaviors
#   ./check --engine  # Check engine only
#   ./check --all     # Check everything
#   ./check --test    # Check + run tests

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SDK_DIR="$SCRIPT_DIR/../rs-sdk"

cd "$SDK_DIR"
exec bun run check.ts "$@"
